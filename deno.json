{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "importMap": "./supabase/functions/import_map.json",
  "lint": {
    "include": ["supabase/functions/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "include": ["supabase/functions/"],
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "tasks": {
    "check": "deno check supabase/functions/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test --allow-env --allow-net"
  }
}

